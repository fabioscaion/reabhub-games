// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Game {
  id             String       @id @default(uuid())
  name           String
  description    String?      @db.Text
  type           String
  category       String
  coverImage     String?      @db.Text
  config         Json         // Stores levels, etc.
  isPublic       Boolean      @default(false)
  status         String       @default("draft") // draft, published
  userId         String
  organizationId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  media          GameMedia[]

  @@index([userId])
  @@index([organizationId])
}

model Media {
  id             String      @id @default(uuid())
  url            String      @db.Text
  name           String
  type           String      // 'image' | 'audio'
  userId         String
  organizationId String?
  folderId       String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  folder         MediaFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  games          GameMedia[]

  @@index([userId])
  @@index([folderId])
}

model MediaFolder {
  id             String      @id @default(uuid())
  name           String
  type           String      // 'image' | 'audio' - to separate folders by media type
  userId         String
  organizationId String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  media          Media[]

  @@index([userId])
}

model GameMedia {
  id      String @id @default(uuid())
  gameId  String
  mediaId String
  game    Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  media   Media  @relation(fields: [mediaId], references: [id], onDelete: Restrict)

  @@unique([gameId, mediaId])
  @@index([gameId])
  @@index([mediaId])
}
